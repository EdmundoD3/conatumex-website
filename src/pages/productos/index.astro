---
import Layout from "../../components/layout/Layout.astro";
import CatalogoCard from "../../components/cards/CatalogoCard.astro";
import { productosJsonLd } from "../../seo/schema/jsonLd";
import productService from "../../components/db/productService";

const MAIN_TITLE = "Conoce nuestro catalogo";
const products = productService.getAll();
---

<Layout title={MAIN_TITLE} jsonLd={productosJsonLd}>
  <main>
    <section class="products-section">
    <h2 class="products-heading">Nuestros productos</h2>
    <p class="products-subheading">
      Descubre nuestra l√≠nea completa de productos para tu bienestar.
    </p>
    <div class="product-grid">
      {products.map((product, index) => <CatalogoCard {...product} />)}
    </div>
  </section>
  </main>
  
</Layout>

<style>
  .products-section {
    padding: 80px 20px;
    text-align: center;
  }
  .products-heading {
    font-size: 2.8rem;
    color: var(--title);
    margin-top: 50px;
    margin-bottom: 10px;
  }
  .products-subheading {
    font-size: 1.2rem;
    color: var(--text);
    margin-bottom: 50px;
  }
  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 50px;
    justify-content: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .products-section {
      padding: 20px 15px;
    }

    .products-heading {
      font-size: 2rem;
      padding: 50px 0 20px 0;
      margin-bottom: 0;
    }

    .products-subheading {
      font-size: 1rem;
      margin-bottom: 30px;
    }

    .product-grid {
      gap: 30px;
    }
  }
</style>
