    border-radius: 10px;
    height: 100%;
  }

.whatsapp-contact {
  padding: 50px 0;
  text-align: center;
  background-color: #e9f7ef;
}

.whatsapp-text {
  font-size: 16px;
  margin-bottom: 15px;
}

.whatsapp-button {
  display: inline-block;
  background-color: rgb(98, 158, 149);
  color: #fff;
  padding: 12px 24px;
  border-radius: 8px;
  font-size: 16px;
  text-decoration: none;
  transition: background-color 0.3s ease;
}

.whatsapp-button i {
  margin-right: 8px;
}

.whatsapp-button:hover {
  background-color: var(--tiffany-blue);
}

.container-whatsapp {
  max-width: 1200px;
  margin: auto;
  padding: 0 15px;
}
.section-title-whatsapp {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 1rem;
  color: #2c3e50;
}

  @media (max-width: 768px) {
    .section-title-whatsapp {
