    margin-bottom: 20px;
  }
  .info-item {
    display: flex;
    align-items: flex-start;
    gap: 15px;
    margin-bottom: 20px;
    font-size: 1rem;
    color: #495057;
  }
  .info-item .icon {
    font-size: 1.5rem;
    line-height: 1;
    margin-top: -5px;
  }
  .purchase-options {
    margin-top: 20px;
  }

  .purchase-options h3 {
    font-size: 1.5rem;
    color: #2c3e50;
    margin-bottom: 15px;
  }
  .purchase-options ul {
    list-style: none;
    padding-left: 5px;
  }
  .purchase-options li {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 20px;
    font-size: 1rem;
    color: #495057;
  }

  .purchase-options p{
    text-align: start;
  }

  .option-icon {
    font-size: 1.5rem;
    line-height: 1;
    margin-top: -5px;
  }

  .fa-whatsapp {
    color: #25d366;
  }

  .fa-facebook {
    color: #1877F2;
  }

  .fa-location-dot {
    color: #e74c3c;
  }

  .shipping-info {
    font-size: 1rem;
    font-weight: bold;
    color: #2c3e50;
    margin-top: 20px;
    text-align: center;
    padding: 15px;
    background-color: #e2f4ea;
    border-radius: 8px;
  }
  .map-card {
    padding: 0;
    overflow: hidden;
  }
