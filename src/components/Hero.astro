---
export type Props = {
  title: string;
  description: string;
  imgSrc: string;
  btn?: {
    text: string;
    href: string;
  };
};
const {
  title,
  description,
  imgSrc = "assets/img/icons/hero.jpg",
  btn,
} = Astro.props;
---

<section
  class="hero-section"
  style=`background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)),
      url("${imgSrc}");`
>
  <div class="hero-content">
    <h1>{title}</h1>
    <p>{description}</p>
    {
      btn && (
        <a href={btn.href} class="btn">
          {btn.text}
        </a>
      )
    }
  </div>
</section>

<style>
  .hero-section {
    background-size: cover;
    background-position: center;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }
  .hero-content h1 {
    font-size: 4em;
    color: var(--pistachio);
  }
  .hero-content p {
    font-size: 1.2em;
    max-width: 600px;
    margin: 0 auto 20px;
    color: var(--text-white);
  }
  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2.5em;
    }
  }
</style>
