---
import MiniLinks from "./utils/MiniLinks.astro";

type Props = {
  title: string;
  description: string;
  imgSrc: string;
  altText: string;
  linkCompras?: {
    shop: string;
    url: string;
  }[];
};
const { title, description, imgSrc, altText, linkCompras } = Astro.props;
---

<div class="wrapper">
  <div class="container">
    <div
      class="top"
      style=`background: url(${imgSrc}) no-repeat center center; background-size: contain;`
    >
      {linkCompras && <MiniLinks links={linkCompras} />}
    </div>
    <div class="bottom">
      <div class="details">
        <h3>{title}</h3>
      </div>
      <!-- <div class="buy ponter">
        <i class="fa-solid fa-basket-shopping-minus">&#x1F6D2;</i>
      </div> -->
    </div>
  </div>
  <div class="inside">
    <div class="icon"><i class="material-icons">&#x1F6C8;</i></div>
    <div class="contents">{description}</div>
  </div>
</div>

<style>
  .wrapper {
    width: 300px;
    height: 500px;
    background: white;
    margin: auto;
    position: relative;
    overflow: hidden;
    border-radius: 10px 10px 10px 10px;
    box-shadow: 0;
    transform: scale(0.95);
    transition:
      box-shadow 0.5s,
      transform 0.5s;
  }
  .wrapper:hover {
    transform: scale(1);
    box-shadow: 5px 20px 30px rgba(0, 0, 0, 0.2);
  }
  .wrapper .container {
    padding: 0;
    width: 100%;
    height: 100%;
  }
  .wrapper .container .top {
    position: relative;
    height: 80%;
    width: 100%;
    background-size: contain;
    -webkit-background-size: 100%;
    -moz-background-size: 100%;
    -o-background-size: 100%;
    background-size: 100%;
  }
  .wrapper .container .bottom {
    display: flex;
    background: #f4f4f4;
    position: relative;
    float: left;
    width: 100%;
    height: 20%;
  }
  .wrapper .container .bottom.clicked {
    transform: translateX(-50%);
  }
  .wrapper .container .bottom h3 {
    margin: 0;
    padding: 0;
  }

  .wrapper .container .bottom .details {
    display: flex;
    flex: 3;
    padding: 20px;
    float: left;
    width: calc(70% - 40px);
    flex-direction: column;
    flex-wrap: nowrap;
    align-content: center;
    justify-content: center;
    align-items: center;
  }
  .wrapper .container .bottom .buy {
    flex: 1;
    float: right;
    width: calc(30% - 2px);
    height: 100%;
    background: #f1f1f1;
    transition: background 0.5s;
    border-left: solid thin rgba(0, 0, 0, 0.1);
  }
  .wrapper .container .bottom .buy i {
    font-size: 30px;
    padding: 30px;
    color: #254053;
    transition: transform 0.5s;
  }
  .wrapper .container .bottom .buy:hover {
    background: #a6cdde;
  }
  .wrapper .container .bottom .buy:hover i {
    transform: scale(1.1);
    color: #00394b;
  }
  .wrapper .inside {
    z-index: 9;
    background: #92879b;
    width: 140px;
    height: 140px;
    position: absolute;
    top: -70px;
    right: -70px;
    border-radius: 0px 0px 200px 200px;
    transition:
      all 0.5s,
      border-radius 2s,
      top 1s;
    overflow: hidden;
  }
  .wrapper .inside .icon {
    position: absolute;
    right: 85px;
    top: 85px;
    color: white;
    opacity: 1;
  }
  .wrapper .inside:hover {
    width: 100%;
    right: 0;
    top: 0;
    border-radius: 0;
    height: 80%;
  }
  .wrapper .inside:hover .icon {
    opacity: 0;
    right: 15px;
    top: 15px;
  }
  .wrapper .inside:hover .contents {
    opacity: 1;
    transform: scale(1);
    transform: translateY(0);
  }
  .wrapper .inside .contents {
    padding: 5%;
    opacity: 0;
    transform: scale(0.5);
    transform: translateY(-200%);
    transition:
      opacity 0.2s,
      transform 0.8s;
  }
  .wrapper .inside .contents table {
    text-align: left;
    width: 100%;
  }
  .wrapper .inside .contents h1,
  .wrapper .inside .contents p,
  .wrapper .inside .contents table {
    color: white;
  }
  .wrapper .inside .contents p {
    font-size: 13px;
  }
  .material-icons {
    display: block;
  }
  .pointer {
    cursor: pointer;
  }
</style>
