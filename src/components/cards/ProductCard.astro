---
import { Image } from "astro:assets";
import type { TProduct } from "../../types/TProduct";
import InfoIcon from "../icons/InfoIcon.astro";

type Props = {
  product: TProduct;
  cart?: {};
};
const { product, cart } = Astro.props;
---

<div class="wrapper">
  <div class="container">
    <div class="top">
      <Image
        src={product.imgData}
        alt={product.altText ?? product.title}
        priority
        class="hero-img"
      />
    </div>
    <div class="bottom">
      <div class="left">
        <div class="details">
          <h3>{product.name ?? product.title}</h3>
          {product.price && <p>${product.price}</p>}
        </div>
        {
          cart && (
            <div class="buy pointer">
              <i class="fa-solid fa-basket-shopping-minus">&#x1F6D2;</i>
            </div>
          )
        }
      </div>
      {
        cart && (
          <div class="right">
            <div class="done pointer">
              <i class="material-icons">&#x2714;</i>
            </div>
            <div class="details">
              <h3>{product.name ?? product.title}</h3>
              <p>Added to your cart</p>
            </div>
            <div class="remove pointer">
              <i class="material-icons">&#x2716;</i>
            </div>
          </div>
        )
      }
    </div>
  </div>
  <div class="inside">
    <div class="icon">
      <InfoIcon />
    </div>
    <div class="contents">
      <h3>{product.title}</h3>
      <p>{product.description}</p>
    </div>
  </div>
</div>

<style>
  .wrapper {
    width: 300px;
    height: 500px;
    background: white;
    margin: auto;
    position: relative;
    overflow: hidden;
    border-radius: 10px;
    transform: scale(0.95);
    transition:
      box-shadow 0.5s,
      transform 0.5s;
    box-shadow: 4px 16px 16px rgba(0, 0, 0, 0.2);
  }
  .wrapper:hover {
    transform: scale(1);
    box-shadow: 5px 20px 30px rgba(0, 0, 0, 0.2);
  }
  .container {
    padding: 0;
    width: 100%;
    height: 100%;
  }
  .top {
    height: 80%;
    width: 100%;
    overflow: hidden;
    background-color: transparent;
  }
  .hero-img {
    width: 100%;
    height: 100%;
    object-fit: contain; /* âœ… hace que se comporte como background-size: cover */
    display: block;
    padding: 1.2rem;
    filter: drop-shadow(5px 5px 10px rgba(0, 0, 0, 0.5));
  }
  .wrapper .container .bottom {
    width: 200%;
    height: 20%;
    transition: transform 0.5s;
  }
  .wrapper .container .bottom.clicked {
    transform: translateX(-50%);
  }
  .wrapper .container .bottom h1 {
    margin: 0;
    padding: 0;
  }
  .wrapper .container .bottom p {
    margin: 0;
    padding: 0;
  }
  .wrapper .container .bottom .left {
    display: flex;
    height: 100%;
    width: 50%;
    background: #f4f4f4;
    position: relative;
    float: left;
  }
  .wrapper .container .bottom .left .details {
    flex: 3;
    padding: 20px;
    float: left;
    width: calc(70% - 40px);
  }
  .wrapper .container .bottom .left .buy {
    flex: 1;
    float: right;
    width: calc(30% - 2px);
    height: 100%;
    background: #f1f1f1;
    transition: background 0.5s;
    border-left: solid thin rgba(0, 0, 0, 0.1);
  }
  .wrapper .container .bottom .left .buy i {
    font-size: 30px;
    padding: 30px;
    color: #254053;
    transition: transform 0.5s;
  }
  .wrapper .container .bottom .left .buy:hover {
    background: #a6cdde;
  }
  .wrapper .container .bottom .left .buy:hover i {
    transform: scale(1.1);
    color: #00394b;
  }
  .wrapper .container .bottom .right {
    display: flex;
    flex-wrap: wrap;
    align-content: flex-end;
    width: 50%;
    background: #a6cdde;
    color: white;
    float: right;
    height: 200%;
    overflow: hidden;
  }
  .wrapper .container .bottom .right .details {
    flex: 3;
    padding: 20px;
    float: right;
    width: calc(70% - 40px);
  }
  .wrapper .container .bottom .right .done {
    flex: 1;
    width: calc(30% - 2px);
    float: left;
    transition: transform 0.5s;
    border-right: solid thin rgba(255, 255, 255, 0.3);
    height: 50%;
  }
  .wrapper .container .bottom .right .done i {
    font-size: 30px;
    padding: 30px;
    color: white;
  }
  .wrapper .container .bottom .right .remove {
    flex: 0.25;
    width: calc(30% - 1px);
    clear: both;
    border-right: solid thin rgba(255, 255, 255, 0.3);
    height: 50%;
    background: #bc3b59;
    transition:
      transform 0.5s,
      background 0.5s;
  }
  .wrapper .container .bottom .right .remove:hover {
    background: #9b2847;
  }
  .wrapper .container .bottom .right .remove:hover i {
    transform: scale(1.1);
  }
  .wrapper .container .bottom .right .remove i {
    transition: transform 0.5s;
    font-size: 30px;
    padding: 30px;
    color: white;
  }
  .wrapper .container .bottom .right:hover .remove,
  .wrapper .container .bottom .right:hover .done {
    transform: translateY(-100%);
  }
  .wrapper .inside {
    z-index: 9;
    background: #92879b;
    width: 140px;
    height: 140px;
    position: absolute;
    top: -70px;
    right: -70px;
    border-radius: 0px 0px 200px 200px;
    transition:
      all 0.5s,
      border-radius 2s,
      top 1s;
    overflow: hidden;
  }
  .wrapper .inside .icon {
    position: absolute;
    width: 24px;
    height: 24px;
    right: 85px;
    top: 85px;
    color: white;
    opacity: 1;
  }
  .wrapper .inside:hover {
    width: 100%;
    right: 0;
    top: 0;
    border-radius: 0;
    height: 80%;
  }
  .wrapper .inside:hover .icon {
    opacity: 0;
    right: 15px;
    top: 15px;
  }
  .wrapper .inside:hover .contents {
    opacity: 1;
    transform: scale(1);
    transform: translateY(0);
  }
  .wrapper .inside .contents {
    padding: 5%;
    opacity: 0;
    transform: scale(0.5);
    transform: translateY(-200%);
    transition:
      opacity 0.2s,
      transform 0.8s;
  }
  .wrapper .inside .contents table {
    text-align: left;
    width: 100%;
  }
  .wrapper .inside .contents h1,
  .wrapper .inside .contents p,
  .wrapper .inside .contents table {
    color: white;
  }
  .wrapper .inside .contents p {
    font-size: 13px;
  }
  .material-icons {
    display: block;
  }
  .pointer {
    cursor: pointer;
  }
</style>

<script>
  const events = () => {
    const buyBtn = document.querySelector(".buy");
    const removeBtn = document.querySelector(".remove");
    const bottom = document.querySelector(".bottom");

    if (buyBtn && bottom) {
      buyBtn.addEventListener("click", () => {
        bottom.classList.add("clicked");
      });
    }

    if (removeBtn && bottom) {
      removeBtn.addEventListener("click", () => {
        bottom.classList.remove("clicked");
      });
    }
  };

  document.addEventListener("DOMContentLoaded", events);
  document.addEventListener("astro:after-swap", events);
</script>
