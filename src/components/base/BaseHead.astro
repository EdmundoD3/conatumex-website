  title,
  description,
  keywords,
  author,
  canonical,

  ogTitle,
  ogDescription,
  ogUrl,
  ogImage,
  ogImageAlt,

  twitterTitle,
  twitterDescription,
  twitterImage,

  jsonLd,
} = Astro.props;
